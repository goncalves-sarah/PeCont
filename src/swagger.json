                                    "type" : "object",
                                    "properties" : {
                                        "id" : {
                                            "type" : "string"
                                        },
                                        "name": {
                                            "type" : "string"
                                        },
                                        "location" : {
                                            "type" : "string"
                                        },
                                        "status" : {
                                            "type" : "number"
                                        },
                                        "ip" : {
                                            "type" : "string"
                                        },
                                        "user" :{
                                            "type" : "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400" : {
                        "description" : "Camera already exists"
                    },
                    "401" : {
                        "description" : "Invalid User"
                    },
                    "402" : {
                        "description" : "Invalid Location"
                    }
                }
            }
        },
        "/cameras/connect/{camera_id}" : {
            "post" : {
                "security": {
                    "bearerAuth": []
                },
                "tags" : ["Cameras"],
                "summary" : "Connect to a camera",
                "description" : "Connect to a Camera and returns the pid for the camera process running in the background",
                "parameters": {
                    "in" : "path",
                    "name" : "camera_id",
                    "required" : true,
                    "schema" : {
                        "type" : "integer"
                    },
                    "description" : "The camera id"
                },
                "responses" : {
                    "200" : {
                        "description" : "Connected",
                        "content" : {
                            "application/json" : {
                                "schema" : {
                                    "type" : "object",
                                    "properties" : {
                                        "pid" : {
                                            "type" : "number"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500" : {
                        "description" : "Something went wrong"
                    }
                }
            }
        },
        "/cameras/disconnect" : {
            "post" : {
                "security": {
                    "bearerAuth": []
                },
                "tags" : ["Cameras"],
                "summary" : "Disconnect a camera",
                "description" : "Disconnect a camera by killing the camera process",
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type" : "object",
                                "properties" : {
                                    "id": {
                                        "type" : "string"
                                    },
                                    "pid" : {
                                        "type" : "integer"
                                    }
                                },
                                "example" : {
                                    "id" : "Camera id",
                                    "pid" : 1510
                                }
                            }
                        }
                    }
                },
                "responses" : {
                    "200" : {
                        "description" : "Connected"
                    },
                    "400" : {
                        "description" : "Process doesn't exists"
                    }
                }
            }
        },
        "/users/locations/cameras" : {
            "get" : {
                "security": {
                    "bearerAuth": []
                },
