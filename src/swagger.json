        "/login" : {
            "post" : {
                "security": [] ,
                "tags" : ["User"],
                "summary" : "Sign in, generating token",
                "description" : "Sign in for the user and create a jwt token",
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type" : "object",
                                "properties" : {
                                    "email" : {
                                        "type" : "string"
                                    },
                                    "password" : {
                                        "type" : "string"
                                    }
                                },
                                "example" : {
                                    "email" : "silva@hotmail.com",
                                    "password" : "minhaSenha"
                                }
