                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/cameras" : {
            "post" : {
                "security": {
                    "bearerAuth": []
                },
                "tags" : ["Cameras"],
                "summary" : "Create a camera",
                "description" : "Create a new Camera",
                "requestBody" : {
                    "content" : {
                        "application/json" : {
                            "schema" : {
                                "type" : "object",
                                "properties" : {
                                    "name": {
                                        "type" : "string"
                                    },
                                    "location" : {
                                        "type" : "string"
                                    },
                                    "status" : {
                                        "type" : "number"
                                    },
                                    "ip" : {
                                        "type" : "string"
                                    },
                                    "user" :{
                                        "type" : "string"
                                    }
                                },
                                "example" : {
                                    "name" : "Camera 1",
                                    "location" : "id from the location",
                                    "status" : 0,
                                    "ip" : "192.168.0.10",
                                    "user" : "id from the user"
                                }
                            }
                        }
                    }
                },
                "responses" : {
                    "201" : {
                        "description" : "Created",
                        "content" : {
                            "application/json" : {
